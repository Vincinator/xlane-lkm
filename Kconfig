#
# Sassy subsystem configuration
#

menuconfig ASGUARD
	bool "Enable ASGUARD"
	default y
	help
	  This enables the network submodule ASGUARD

config ASGUARD_FD
	bool "Enable ASGUARD FD"
	depends on ASGUARD
	default n
	help
		Enables Failure Detector Kernel Module

config ASGUARD_CONSENSUS
	bool "Enable ASGUARD Consensus"
	depends on ASGUARD
	default y
	help
		Enables Consensus Kernel Module

config ASGUARD_ECHO
	bool "Enable ASGUARD Echo"
	depends on ASGUARD
	default y
	help
		Enables Echo Kernel Module

config ASGUARD_MLX5
	bool "Enable ASGUARD MLX5 Connection"
	depends on ASGUARD
	default y
	help
		Enables MLX5 Driver Support

config ASGUARD_NFP
	bool "Enable ASGUARD NFP Connection"
	depends on ASGUARD
	default n
	help
		Enables NFP Driver Support
